function void addQuestion(JTextPane textPane, ArrayList buttons, Question question) {
	
	textPane.setText(question.description);
	
	
	for (JRadioButton jRadioButton : (List <JRadioButton>) buttons) {
		jRadioButton.setVisible(false);	
	}
	
	int i = 0;
	for (String choice : question.choices) {
			((List <JRadioButton>)buttons).get(i).setText(choice);
			((List <JRadioButton>)buttons).get(i).setVisible(true);
			i++;				
		}
	
}






